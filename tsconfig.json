{
    "compilerOptions":
    {
        "target": "es5",
        "module": "esnext",
        "sourceMap": false,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "outDir": "dist",
        "lib": 
        [
            "es2016",
            "dom"
        ],
        "plugins": 
        [
            {
                "name": "@angular/language-service"
            }
        ]
    },
    "exclude": 
    [
        "node_modules",
        "dist",
        "testing",
        "*.spec.ts",
        "karma-test-shim.ts"
    ],
    "angularCompilerOptions": 
    {
        "skipMetadataEmit" : false,
        "genDir": "dist"
    }
}