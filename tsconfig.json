{
    "compilerOptions":
    {
        "target": "es5",
        "module": "commonjs",
        "sourceMap": false,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "outDir": "dist",
        "lib": 
        [
            "es6", "dom"
        ]
    },
    "exclude": 
    [
        "node_modules"
    ],
    "angularCompilerOptions": 
    {
        "skipMetadataEmit" : false,
        "genDir": "dist"
    }
}